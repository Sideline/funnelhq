= form_for @task do |f|
  -if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title

  .field
    = f.label "Project"
    = f.select :project_id, current_user.projects.collect{ |c| [c.title, c.id] }.unshift(["N/A", ""])

  -if controller.action_name == "edit"
    .field
      = f.label :complete
      = f.check_box :complete
  .actions
    = f.submit 'Save'
