= form_for @upload do |f|
  -if @upload.errors.any?
    #error_explanation
      %h2= "#{pluralize(@upload.errors.count, "error")} prohibited this upload from being saved:"
      %ul
        - @upload.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :is_public
    = f.check_box :is_public

  .field
    = f.label :file
    = f.file_field :file
	
  .actions
    = f.submit 'Save'
